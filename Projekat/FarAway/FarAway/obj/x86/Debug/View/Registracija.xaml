<Page
    x:Class="FarAway.Registracija"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FarAway"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="registracija">

        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/ooad slike/hotness.jpg" AlignmentX="Center" AlignmentY="Center" Opacity="0.5" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <StackPanel x:ConnectionId='2' x:Name="unos1" Grid.Row="1" Grid.Column="1">
            <TextBlock HorizontalAlignment="Left" Height="46" Margin="50,0,0,0" Text="Ime" TextWrapping="Wrap" Width="75" FontFamily="Bradley Hand ITC" FontSize="25" FontWeight="Bold" />
            <TextBox x:ConnectionId='9' x:Name="ime" HorizontalAlignment="Left" Height="18" Margin="100,-60,0,0"  Width="131" Background="White" Text="{Binding Path = Korisnik.Ime,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBlock HorizontalAlignment="Left" Height="46" Margin="10,0,0,0" Text="Prezime" TextWrapping="Wrap" Width="85" FontFamily="Bradley Hand ITC" FontSize="24" TextAlignment="Left" FontWeight="Bold"/>
            <TextBox x:ConnectionId='10' x:Name="prezime" HorizontalAlignment="Left" Height="18" Margin="100,-70,0,0"  Width="131" Background="White" Text="{Binding Path = Korisnik.Prezime,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <TextBlock HorizontalAlignment="Left" Height="25" Margin="10,0,0,0" Text="E-mail" TextWrapping="Wrap" Width="85" FontFamily="Bradley Hand ITC" FontSize="25" FontWeight="Bold"/>
            <TextBox x:ConnectionId='11' x:Name="email" HorizontalAlignment="Left" Height="18" Margin="100,-40,0,0" Width="131" Background="White" Text="{Binding Path = Korisnik.Email,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBlock HorizontalAlignment="Left" Height="25" Margin="10,0,0,0" Text="Datum rodjenja" TextWrapping="Wrap" Width="85" FontFamily="Bradley Hand ITC" FontSize="25" FontWeight="Bold"/>
           <!-- <CalendarDatePicker x:Name="dRodjenja" HorizontalAlignment="Left" Height="35" Margin="100,-25,0,0" Width="131" Background="White" Date= "{Binding Path = Korisnik.DatumRodjenja,Converter={StaticResource StringToDateTimeOffsetConverter} ,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>-->
            <TextBox x:ConnectionId='12' x:Name="dRodjenja" HorizontalAlignment="Left" Height="35" Margin="100,-25,0,0" Width="131" Background="White" Text="{Binding Path = Korisnik.DatumRodjenja,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,15,0,0" Text="Username" TextWrapping="Wrap" Width="110" FontFamily="Bradley Hand ITC" FontSize="25" FontWeight="Bold"/>
            <TextBox x:ConnectionId='13' x:Name="username" HorizontalAlignment="Left" Height="25" Margin="125,-35,0,0" Width="110" Background="White" Text="{Binding Path = Korisnik.Username,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBlock HorizontalAlignment="Left" Height="28" Margin="10,5,0,0"  Text="Password" TextWrapping="Wrap" Width="110" FontFamily="Bradley Hand ITC" FontSize="25" FontWeight="Bold"/>
            <PasswordBox x:ConnectionId='14' x:Name="password" HorizontalAlignment="Left" Height="25" Margin="125,-30,0,0" Width="110" Background="White" Password="{Binding Path = Korisnik.Password,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel x:ConnectionId='3' x:Name="unos2" Grid.Row="2" Grid.Column="1">
            <TextBlock HorizontalAlignment="Left" Height="60" Margin="10,0,0,0" Text="Potvrdi password" TextWrapping="Wrap" Width="100" FontFamily="Bradley Hand ITC" FontSize="25" FontWeight="Bold"/>
            <PasswordBox x:ConnectionId='7' x:Name="password2" HorizontalAlignment="Left" Height="34" Margin="125,-50,0,0" Width="110" Background="White" Password="{Binding Path = PSifra,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Button x:ConnectionId='8' x:Name="btnRegistracija" Content="Registruj se" HorizontalAlignment="Left" Height="42" Margin="75,0,0,0" Width="160" Background="White" Command="{Binding Path=UnesiUBazu}" />
            <!--<Button x:Name="dalje" Content="Dalje" HorizontalAlignment="Left" Height="42" Margin="75,0,0,0" Width="160" Background="White" Click="dalje_Click"/>-->
        </StackPanel>

        <Button x:ConnectionId='4' x:Name="naziv" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Background="Transparent" Height="158" Margin="250,20,0,0" VerticalAlignment="Top" Width="649"                    >
            <TextBlock x:ConnectionId='6' x:Name="tekst" Text="FAR AWAY" FontFamily="Forte" FontSize="100" Foreground="Black"   />
        </Button>
        <TextBlock x:ConnectionId='5' x:Name="reg" Grid.ColumnSpan="2" Grid.Column="1"  HorizontalAlignment="Left" Height="74" Margin="250,156,0,0" Text="Registrujte se" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" FontFamily="Forte" FontSize="50" TextAlignment="Right"/>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='15' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='16' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='17' x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>


                        <Setter Target="naziv.(Grid.Column)" Value="0"/>
                        <Setter Target="naziv.Margin" Value="0,20,0,0"/>
                        <Setter Target="tekst.FontSize" Value="80"/>
                        <Setter Target="naziv.(Grid.ColumnSpan)" Value="3"/>


                        <Setter Target="reg.(Grid.Column)" Value="0"/>
                        <Setter Target="reg.Margin" Value="20,140,0,0"/>
                        <Setter Target="reg.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="reg.FontSize" Value="40"/>
                        <Setter Target="reg.TextAlignment" Value="left"/>

                        <Setter Target="unos1.(Grid.Column)" Value="0"/>
                        <Setter Target="unos1.(Grid.ColumnSpan)" Value="3"/>

                        <Setter Target="unos2.(Grid.Column)" Value="0"/>
                        <Setter Target="unos2.(Grid.ColumnSpan)" Value="3"/>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

    </Grid>
   
</Page>

