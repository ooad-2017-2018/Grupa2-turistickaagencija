<Page
    x:Class="FarAway.Pretraga"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FarAway"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="3">
                    <Image x:ConnectionId='11' x:Name="SeaSide" HorizontalAlignment="Stretch" Height="167" Margin="0,0,2,0" Source="Assets/Lord have mercy.png" Stretch="Fill"/>
                    <AutoSuggestBox x:ConnectionId='12' x:Name="SearchBox" Height="46" Margin="56,5,36,0" VerticalAlignment="Top" QueryIcon="Find" PlaceholderText="Search"/>

                </StackPanel>
                <TextBlock Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="31" Margin="48,50,0,0" Grid.Row="1" Text="Najpopularnije Destinacije" TextWrapping="Wrap" VerticalAlignment="Top" Width="268"/>

                <StackPanel x:ConnectionId='1' x:Name="img1" Grid.Row="1">
                    <Image x:ConnectionId='10' x:Name="Exit"  HorizontalAlignment="Left" Height="90" Margin="48,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230" Source="Assets/zagreb.jpg" Stretch="Fill"/>
                    <Button Content="Zagreb" HorizontalAlignment="Left" Height="45" Margin="105,0,0,0" Width="130" RequestedTheme="Default"/>
                </StackPanel>
                
                <StackPanel x:ConnectionId='2' x:Name="img2" Grid.Row="1" Grid.Column="1">
                    <Image Grid.Column="1" HorizontalAlignment="Left" Height="90" Margin="48,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230" Source="Assets/antalya.jpg" Stretch="Fill"/>
                    <Button Content="Antalya" HorizontalAlignment="Left" Height="45" Margin="105,0,0,0" Width="135"/>
                </StackPanel>
                
                <Button x:ConnectionId='3' x:Name="destinacija" Content="Destinacije" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="51" Grid.Row="1" VerticalAlignment="Top" Width="427"/>
                <Button x:ConnectionId='4' x:Name="izleti" Content="Izleti"  Grid.Column="1" HorizontalAlignment="Left" Height="51" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="427"/>
                <Button x:ConnectionId='5' x:Name="hoteli" Content="Hoteli"  Grid.Column="2" HorizontalAlignment="Left" Height="51" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="426"/>

                <StackPanel x:ConnectionId='6' x:Name="izleti1" Grid.Row="2">
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="33,0,0,0" Text="Najpopularniji Izleti" TextWrapping="Wrap" Width="260"/>
                    <Image HorizontalAlignment="Left" Height="90" Margin="48,0,0,0" Width="207" Source="Assets/exit.png" Stretch="Fill"/>
                    <Button Content="Button" HorizontalAlignment="Left" Height="35" Margin="105,5,0,0" Width="118"/>
                </StackPanel>

                <StackPanel x:ConnectionId='7' x:Name="izleti2" Grid.Row="2" Grid.Column="1">
                    <Image HorizontalAlignment="Left" Height="90" Margin="48,20,0,0" Width="207" Source="Assets/vpb.jpg" Stretch="Fill"/>
                    <Button Content="Button" HorizontalAlignment="Left" Height="35" Margin="105,0,0,0" Width="118"/>
                </StackPanel>

                <StackPanel x:ConnectionId='8' x:Name="hoteli1" Grid.Row="3">
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="33,0,0,0" Text="Najpopularniji Hoteli" TextWrapping="Wrap" Width="233"/>
                    <Image HorizontalAlignment="Left" Height="80" Margin="65,0,0,0" Width="200" Source="Assets/cristal.jpg" Stretch="Fill"/>
                    <Button Content="Button" HorizontalAlignment="Left" Height="30" Margin="105,0,0,0" Width="118"/>
                </StackPanel>

                <StackPanel x:ConnectionId='9' x:Name="hoteli2"  Grid.Row="3" Grid.Column="1">
                    <Image HorizontalAlignment="Left" Height="90" Margin="48,20,0,0" Width="200" Source="Assets/park villa bec.jpg" Stretch="Fill"/>
                    <Button Content="Button" HorizontalAlignment="Left" Height="35" Margin="105,0,0,0" Width="118"/>

                </StackPanel>
                
            </Grid>
        </ScrollViewer>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='13' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='14' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='15' x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="img1.(Grid.Row)" Value="1"/>
                        <Setter Target="img1.(Grid.Column)" Value="0"/>
                        <Setter Target="img1.(Grid.ColumnSpan)" Value="3"/>

                        <Setter Target="img2.(Grid.Row)" Value="1"/>
                        <Setter Target="img2.(Grid.Column)" Value="1"/>
                        <Setter Target="img2.(Grid.ColumnSpan)" Value="3"/>
                     

                        <Setter Target="izleti1.(Grid.Row)" Value="2"/>
                        <Setter Target="izleti1.(Grid.Column)" Value="0"/>
                        <Setter Target="izleti1.(Grid.ColumnSpan)" Value="3"/>
                      

                        <Setter Target="izleti2.(Grid.Row)" Value="2"/>
                        <Setter Target="izleti2.(Grid.Column)" Value="1"/>
                        <Setter Target="izleti2.(Grid.ColumnSpan)" Value="3"/>
                       

                        <Setter Target="hoteli1.(Grid.Row)" Value="3"/>
                        <Setter Target="hoteli1.(Grid.Column)" Value="0"/>
                        <Setter Target="hoteli1.(Grid.ColumnSpan)" Value="3"/>
                        

                        <Setter Target="hoteli2.(Grid.Row)" Value="3"/>
                        <Setter Target="hoteli2.(Grid.Column)" Value="1"/>
                        <Setter Target="hoteli2.(Grid.ColumnSpan)" Value="3"/>
                     

                            <!-- <Setter Target="kultura.Width" Value="*"/>
                        <Setter Target="ljetovanje.Width" Value="*"/>
                        <Setter Target="zimovanje.Width" Value="*"/>
                        <Setter Target="jizleti.Width" Value="*"/>
                        <Setter Target="honeymoon.Width" Value="*"/>-->

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>



    </Grid>
</Page>

