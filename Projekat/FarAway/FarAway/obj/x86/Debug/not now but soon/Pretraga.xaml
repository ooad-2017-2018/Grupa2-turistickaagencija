<Page
    x:Class="FarAway.Pretraga"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FarAway"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Assets/ooad slike/pretraga.jpg" AlignmentX="Center" AlignmentY="Center" Opacity="0.3" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
                    <Button x:ConnectionId='14' x:Name="bdestinacija" Content="Destinacije" HorizontalAlignment="Stretch" Height="58" Margin="-890,0,0,0" Width="445" Background="Lavender" Foreground="Violet"/>
                    <Button x:ConnectionId='15' x:Name="bizleti" Content="Izleti" HorizontalAlignment="Stretch" Height="58" Margin="0,-58,0,0" Width="427" Background="Lavender" Foreground="OliveDrab"/>
                    <Button x:ConnectionId='16' x:Name="bhoteli" Content="Hoteli" Grid.Column="1" HorizontalAlignment="Stretch" Height="58" Margin="880,-58,0,0" Width="426" Background="Lavender" Foreground="DarkBlue"/>
                    <AutoSuggestBox x:ConnectionId='17' x:Name="SearchBox" Height="47" Margin="56,20,36,0" VerticalAlignment="Top" QueryIcon="Find" PlaceholderText="Pretrazi"/>
                    <TextBlock HorizontalAlignment="Left" Height="40" Margin="327,20,0,0" Text="Najpopularnije destinacije" TextWrapping="NoWrap" Width="363"/>
                    
                </StackPanel>

                <StackPanel x:ConnectionId='1' x:Name="s1" Grid.Row="1">
                    <FlipView x:ConnectionId='11' x:Name="destinacije" HorizontalAlignment="Left" Height="120" Margin="227,20,0,0" Width="340">
                        <Button x:ConnectionId='12' x:Name="zagreb">
                            <Image Source="Assets/ooad slike/zagreb.jpg" Stretch="Fill"/>                           
                        </Button>
                        <Button x:ConnectionId='13' x:Name="beograd">
                            <Image Source="Assets/ooad slike/antalya.jpg" Stretch="Fill"/>
                        </Button>
                    </FlipView>
                    <TextBlock HorizontalAlignment="Left" Height="35" Margin="327,10,0,0" Text="Najpopurniji izleti" TextWrapping="Wrap" Width="326"/>
                </StackPanel>

                <StackPanel x:ConnectionId='2' x:Name="dinfo" Grid.Row="1" Grid.Column="1">
                    <TextBox HorizontalAlignment="Stretch" Height="120" Margin="20,0,0,0" Text="info o destinaciji" Width="562"/>

                </StackPanel>
                    
                <StackPanel Grid.Row="2">
                    <FlipView x:ConnectionId='8'  x:Name="izleti" HorizontalAlignment="Left" Height="120" Margin="227,20,0,0" Width="340">
                        <Button x:ConnectionId='9' x:Name="exit">
                            <Image Source="Assets/ooad slike/exit.png" Stretch="Fill"/>
                        </Button>
                        <Button x:ConnectionId='10' x:Name="vbp">
                            <Image Source="Assets/ooad slike/vpb.jpg" Stretch="Fill"/>
                        </Button>
                    </FlipView>
                    <TextBlock HorizontalAlignment="Left" Height="22" Margin="327,10,0,0" Text="Najpopularniji hoteli" TextWrapping="Wrap" Width="283"/>
                </StackPanel>

                <StackPanel x:ConnectionId='3' x:Name="iinfo" Grid.Row="2" Grid.Column="1">
                    <TextBox HorizontalAlignment="Stretch" Height="120" Margin="20,0,0,0" Text="info o izletu" Width="562"/>
                </StackPanel>


                <StackPanel Grid.Row="3">
                    <FlipView x:ConnectionId='5' x:Name="hoteli" HorizontalAlignment="Left" Height="120" Margin="227,20,0,0" Width="340">
                        <Button x:ConnectionId='6' x:Name="cristal">
                            <Image Source="Assets/ooad slike/cristal.jpg" Stretch="Fill"/>
                        </Button>
                        <Button x:ConnectionId='7' x:Name="salvatore">
                            <Image Source="Assets/ooad slike/salvatore.jpg" Stretch="Fill"/>
                        </Button>
                    </FlipView>
                </StackPanel>

                <StackPanel x:ConnectionId='4' x:Name="hinfo" Grid.Row="3" Grid.Column="1">
                    <TextBox HorizontalAlignment="Stretch" Height="120" Margin="20,0,0,0" Text="info o hotelu" Width="562"/>
                </StackPanel>
                
                




            </Grid>
        </ScrollViewer>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='18' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='19' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='20' x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="destinacije.Margin" Value="20,20,0,0"/>
                        <Setter Target="destinacije.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="destinacije.Width" Value="auto"/>

                        <Setter Target="dinfo.Margin" Value="10,20,0,0"/>
                        <Setter Target="dinfo.(Grid.ColumnSpan)" Value="2"/>


                        <Setter Target="izleti.Margin" Value="20,20,0,0"/>
                        <Setter Target="izleti.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="izleti.Width" Value="auto"/>

                        <Setter Target="iinfo.Margin" Value="10,20,0,0"/>
                        <Setter Target="iinfo.(Grid.ColumnSpan)" Value="2"/>

                        <Setter Target="hoteli.Margin" Value="20,20,0,0"/>
                        <Setter Target="hoteli.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="hoteli.Width" Value="auto"/>

                        <Setter Target="hinfo.Margin" Value="10,20,0,0"/>
                        <Setter Target="hinfo.(Grid.ColumnSpan)" Value="2"/>

                        <Setter Target="bhoteli.(Grid.Column)" Value="0"/>
                        
                        



                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>



    </Grid>
</Page>

